{
  "name": "vue3-h5-sdk",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "20.12.0"
  },
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "pre-commit": "lint-staged -p false",
    "preview": "vite preview",
    "test:unit": "vitest",
    "serve:example": "vite --host",
    "build:example": "vue-tsc --build --force && vite build",
    "build:type": "tsc -p tsconfig.build.json",
    "build:code": "babel -D ./src -x .ts,.tsx -d ./esm",
    "build:esm": "pnpm run clean:esm && pnpm run build:type && pnpm run build:code",
    "build:cjs": "pnpm run clean:cjs && pnpm run build:type",
    "clean:esm": "rimraf ./esm",
    "clean:cjs": "rimraf ./lib",
    "lint": "pnpm run lint:js && pnpm run lint:css",
    "lint:js": "eslint --ext .vue,.js,.jsx,.ts,.tsx ./src",
    "lint:css": "stylelint ./src/**.{vue,css,less,sass,scss}",
    "format": "pnpm run format:js && pnpm run format:css",
    "format:js": "eslint --fix --ext .vue,.js,.jsx,.ts,.tsx ./src",
    "format:css": "stylelint --fix --allow-empty-input ./src/**.{vue,css,less,sass,scss}"
  },
  "dependencies": {
    "vue": "^3.4.38"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.8",
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-typescript": "^7.24.7",
    "@sxwy/commitlint-config": "^2.0.0",
    "@sxwy/eslint-config-vue": "^2.0.0",
    "@sxwy/prettier-config": "^2.0.0",
    "@sxwy/stylelint-config": "^2.0.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.4.2",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vitejs/plugin-vue-jsx": "^4.0.1",
    "@vue/babel-plugin-jsx": "^1.2.2",
    "@vue/tsconfig": "^0.5.1",
    "commitlint": "^19.4.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.5",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.9",
    "only-allow": "^1.2.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "sass": "^1.77.8",
    "sass-loader": "^16.0.1",
    "stylelint": "^16.8.2",
    "typescript": "~5.5.4",
    "vite": "^5.4.2",
    "vitest": "^2.0.5",
    "vue-tsc": "^2.0.29"
  }
}
