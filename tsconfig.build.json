{
  "include": ["src/**/*"],
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "outDir": "./esm",
    "rootDir": "./src",
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true
  }
}
